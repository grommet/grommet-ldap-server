---
parser: babel-eslint

env:
  browser: true
  node: true

globals:
  __DEV__: true
  __THEME__: true
  __DEV_MODE__: true
  __SOCKET_HOST__: true
  IntlPolyfill: true
  Modernizr: true
  describe: true
  it: true
  beforeEach: true
  afterEach: true
  before: true
  after: true

rules:
  # ERRORS
  space-before-blocks: 2
  indent: [2, 2, { SwitchCase: 1 }]
  brace-style: 2
  # keyword-spacing: 2
  comma-dangle: 2
  no-unused-expressions: 2
  block-scoped-var: 2
  eol-last: 2
  dot-notation: 2
  consistent-return: 2
  no-unused-vars: [2, args: none]
  semi: [2, "always"]

  # DISABLED
  max-len: 0
  #change soon back to max-len: [1, 80]
  no-underscore-dangle: 0
  new-cap: 0
  no-use-before-define: 0
  key-spacing: 0
  eqeqeq: 0
  strict: 0
  space-unary-ops: 0
  yoda: 0
  no-loop-func: 0
  no-trailing-spaces: 0
  no-multi-spaces: 0
  no-shadow: 0
  no-alert: 0
  no-process-exit: 0
  no-extend-native: 0
  # block-scoped-var: 0
  quotes: 0
